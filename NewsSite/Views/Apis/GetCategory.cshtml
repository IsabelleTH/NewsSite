@model IEnumerable<NewsSite.Models.Article>
@{
    ViewBag.Title = "GetCategory";
}

<h3>Categories</h3>

<style>
    fieldset {
        overflow: hidden;
        display: inline-block;
    }

    .some-class {
        float: left;
        clear: none;
        
    }

    label {
        float: left;
        clear: none;
        display: block;
        padding: 0px 1em 0px 8px;
        vertical-align: top;
    }

    input[type=radio],
    input.radio {
        float: left;
        clear: none;
        margin: 2px 0 0 2px;
    }

    * {
        box-sizing: border-box;
    }


    /* Add a gray background color with some padding*/
    body {
        /*font-family: 'Montserrat', sans-serif; */
        font-family: Inter,Helvetica,Arial,sans-serif;
        padding: 20px;
        background: white;
    }


    /* Header/Blog Title*/
    .header {
        padding: 30px;
        font-size: 40px;
        text-align: center;
        background: white;
    }

    /* Create two unequal columns that floats next to each other */
    /* Left column */
    .leftcolumn {
        float: left;
        width: 65%;
    }

    /* Right column */
    .rightcolumn {
        float: left;
        width: 25%;
        padding-left: 20px;
    }

    /* Fake image */
    .fakeimg {
        background-color: white;
        padding: 20px;
        text-align: center;
        max-width: 100%;
        height: auto;
    }

    p {
        text-align: center;
        /*font-family: Droid Sans, Helvetica ,Arial, sans-serif;*/
        font-family: Inter;
    }

    .card {
        padding: 20px;
        margin-top: 20px;
        background-color: white;
        border-radius: 0px;
        border-color: white;
    }

    .card-small {
        margin-left: 5px;
        padding-top: 20px;
        text-align: center;
        border: 1px solid;
        border-radius: 10px;
        box-shadow: 0 6px 35px rgba(0,0,0,.09);
        border-color: #d3d3d3;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .hidden-item{
        display: none;
    }
    a {
        color: black;
        text-align: center;
    }

    a:hover{
       color: #555555;
    }
</style>


    @using (Html.BeginForm("GetCategory", "Apis", FormMethod.Get))
    {
        <fieldset>
            <div class="some-class" id="s">
                <input type="radio" name="query" value="business" id="business">
                <label for="business">Business</label>

                <input type="radio" name="query" value="sports">
                <label for="business">Sports</label>

                <input type="radio" name="query" value="entertainment">
                <label for="business">Entertainment</label>

                <input type="radio" name="query" value="health">
                <label for="business">Health</label>

                <input type="radio" name="query" value="general">
                <label for="business">General</label>

                <input type="radio" name="query" value="science">
                <label for="business">Science</label>

                <input type="radio" name="query" value="technology">
                <label for="business">Technology</label>

                <input type="submit" value="Submit" />

            </div>
        </fieldset>
    }



<h3>
    @ViewBag.Message
</h3>

@foreach (var item in Model)
{
    if (Model != null)
    {
        <div class="card">

            <h2>@Html.ActionLink(item.Title, "ViewArticle", "Apis")</h2>

            <div class="fakeimg">
                <img src="@Html.DisplayFor(modelItem => item.UrlToImage)" , width="600" />
            </div>

            <div class="under" style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Description)
            </div>

            @if (item.Author != null)
            {
                <div class="under" style="text-align: center; margin-top: 5px;">
                    By <strong>@Html.DisplayFor(modelItem => item.Author)</strong>
                </div>
            }

        </div>
    } 

}




@if (Model == null)
{
    <script>
        document.getElementById("s").hide();
    </script>
}

