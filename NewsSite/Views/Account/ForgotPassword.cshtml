@model NewsSite.Models.ChangePasswordViewModel

@using(Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h3>
    <span class="alert-success">
        @ViewBag.Message
    </span>
    <span class="alert-danger">
        @ViewBag.Error
    </span>
</h3>
<div class="form-horizontal">
    <h3>Reset password</h3>
    <hr />
    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="form-group">
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send link" class="btn btn-default" />
        </div>
    </div>
</div>
}
